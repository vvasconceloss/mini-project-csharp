@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-3">
        <div class="text-center">
            <h1 class="display-4 text-primary">Projeto ASP.NET MVC</h1>
            <h6 class="text-muted">Grupo: Daryna Novytska, João Calixto, Renan Dutra, Victor Vasconcelos</h6>
        </div>
        <hr class="my-4">
        <div class="mt-4">
            <h5 class="text-secondary">Funcionalidades da Aplicação:</h5>
            <ul class="list-group list-group-flush mt-3">
                <li class="list-group-item">
                    <i class="bi bi-plus-circle text-success"></i> Criar novos Clientes
                </li>
                <li class="list-group-item">
                    <i class="bi bi-pencil-square text-warning"></i> Editar Clientes existentes
                </li>
                <li class="list-group-item">
                    <i class="bi bi-trash-fill text-danger"></i> Apagar Clientes existentes
                </li>
                <li class="list-group-item">
                    <i class="bi bi-table text-info"></i> Navegar nos registos da tabela clientes
                </li>
                <li class="list-group-item">
                    <i class="bi bi-box-arrow-in-right text-primary"></i> Criação de login/logout
                </li>
                <li class="list-group-item">
                    <i class="bi bi-person-plus text-success"></i> Criação do novo registo
                </li>
                <li class="list-group-item">
                    <i class="bi bi-shield-lock text-secondary"></i> Encriptação/desencriptação da palavra-passe
                </li>
            </ul>
        </div>
    </div>
</body>
</html>