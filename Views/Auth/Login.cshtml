@model mini_project_csharp.Models.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4 auth-div">
                <h2 class="text-center title-auth">Bem-vindo de volta! Faça o seu Login</h2>
                    @using (Html.BeginForm("LoginClient", "Auth", FormMethod.Post)){
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="Email" id="email" class="form-control" placeholder="Endereço de Email" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Palavra-passe</label>
                            <input type="password" name="Password" id="password" class="form-control" placeholder="Palavra-passe" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    }
                <h3 class="link-account">Não tem uma conta? <a href="/Auth/Register" asp-area="" asp-controller="Auth" asp-action="Register">Faça o registo</a></h3>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>