@model mini_project_csharp.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4 auth-div">
                <h2 class="text-center title-auth">Bem-vindo! Faça seu Registo</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                @using (Html.BeginForm("RegisterClient", "Auth", FormMethod.Post, new { @class = "form-auth" }))
                {
                    <div class="form-group mb-3">
                        <label for="nome" class="form-label">Nome</label>
                        <input type="text" id="nome" name="Nome" class="form-control"/>
                        @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" id="email" name="Email" class="form-control"/>
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="Password" class="form-control"/>
                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        <label for="ConfirmPassword" class="form-label">Confirmar Password</label>
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control"/>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Registo</button>
                }
                <h3 class="link-account">Já tem uma conta? <a href="/Auth/Login" asp-area="" asp-controller="Auth" asp-action="Login">Faça login</a></h3>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>