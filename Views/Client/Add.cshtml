@model mini_project_csharp.Models.Client

@{
    ViewBag.Title = "Adicionar Cliente";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2 class="text-center title-auth">Adicionar Cliente</h2>
        @using (Html.BeginForm("Add", "Client", FormMethod.Post))
        {
            <div class="form-group">
                <label for="Nome" class="form-label">Nome @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })</label>
                <input id="Nome" name="Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="Apelido" class="form-label">Apelido</label>
                <input id="Apelido" name="Apelido" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Endereço" class="form-label">Endereço</label>
                <input id="Endereço" name="Endereco" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="Telefone" class="form-label">Telefone</label>
                <input id="Telefone" name="Telefone" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="Email" class="form-label">Email @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })</label>
                <input id="Email" name="Email" type="email" class="form-control"/>
            </div>
            <div class="form-group" class="form-label">
                <label for="Nif">NIF:</label>
                <input id="Nif" name="Nif" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="CodPostal" class="form-label">Código Postal</label>
                <select id="CodPostal" name="IdCodPostal" class="form-control">
                    @if (ViewBag.CodPostais != null)
                    {
                        foreach (var item in (List<SelectListItem>)ViewBag.CodPostais)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Password" class="form-label">Password @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })</label>
                <input id="Password" name="Password" type="password" class="form-control"/>
            </div>
            <div class="add-buttons">
                <button type="submit" class="button-add-client">Salvar</button>
                <a href="/Client" class="button-add-client" asp-area="" asp-controller="Client" asp-action="Index">Cancelar</a>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>