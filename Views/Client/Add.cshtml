@{
    ViewBag.Title = "Adicionar dados do Cliente";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2 class="text-center title-auth">Adicionar dados do cliente</h2>
        <form method="post">
            <div class="form-group">
                <label for="Nome" class="form-label">Nome:</label>
                <input id="Nome" name="Nome" class="form-control" placeholder="Nome" />
            </div>
            <div class="form-group">
                    <label for="Apelido" class="form-label">Apelido:</label>
                    <input id="Apelido" name="Apelido" class="form-control" placeholder="Apelido" />
            </div>
            <div class="form-group">
                <label for="Telefone" class="form-label">Telefone:</label>
                <input id="Telefone" name="Telefone" class="form-control" placeholder="Telefone" />
            </div>
            <div class="form-group">
                <label for="Email" class="form-label">Email:</label>
                <input id="Email" name="Email" type="email" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group" class="form-label">
                <label for="Nif">NIF:</label>
                <input id="Nif" name="Nif" class="form-control" placeholder="NIF" />
            </div>
            <div class="form-group">
                <label for="CodPostal" class="form-label">Código Postal:</label>
                <select id="CodPostal" name="CodPostal" class="form-control">
                    <option value="">Código Postal</option>
                    <option value="1000-001">1000-001</option>
                    <option value="2000-002">2000-002</option>
                    <option value="3000-003">3000-003</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Password" class="form-label">Password:</label>
                <input id="Password" name="Password" type="password" class="form-control" placeholder="Password" />
            </div>
            <div class="add-buttons">
                <button type="submit" class="button-add-client">Salvar</button>
                <a href="/Client" class="button-add-client" asp-area="" asp-controller="Client" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>